<widget id="es.mepwebs.lanzarote.cultura" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cultura Lanzarote</name>
    <description>
        App Cabildo en desarrollo
    </description>
    <author email="info@mepwebs.com" href="http://mepwebs.com">
        Purinagripal
    </author>
    <content src="index.html" />
    
    <!--    PREFERENCIAS    -->
    
    <!-- all platforms -->
    <preference name="phonegap-version" value="cli-9.0.0" />
    
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <plugin name="cordova-plugin-whitelist" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <!-- android only -->
    <!-- para evitar el error de android -->
    <preference name="LoadUrlTimeoutValue" value="120000" /> 

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>